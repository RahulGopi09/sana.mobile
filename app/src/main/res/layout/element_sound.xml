<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/element"
              android:focusableInTouchMode="true">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="Text"
        android:id="@+id/question"
        android:layout_margin="5dp"
        android:editable="false"
        android:layout_gravity="left"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_app_logo"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="16dip" android:layout_marginRight="16dip" android:layout_marginTop="5dip" android:layout_marginBottom="5dip">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_start_recording"
            android:id="@+id/btn_action_start" android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_stop_recording"
            android:id="@+id/btn_action_stop" android:layout_gravity="center_horizontal"/>

    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="Message"
        android:id="@+id/error" android:layout_gravity="center_horizontal" android:layout_margin="5dip"/>

</LinearLayout>
